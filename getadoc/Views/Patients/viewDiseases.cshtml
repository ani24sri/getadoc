@model IEnumerable<getadoc.Models.diseaseData>

@{
    ViewBag.Title = "viewDiseases";
}

<h2>Check and find details about various Diseases</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="input-group">
        @Html.TextBox("SearchString", value: null, htmlAttributes: new { @placeholder = "Search ", @class = "form-control" })
        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.symptom1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.symptom2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.symptom3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.symptom4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cure)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.symptom1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.symptom2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.symptom3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.symptom4)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.desc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cure)
        </td>
        <td>
            @Html.ActionLink("Details", "diseaseDetails", new { id=item.id }) |
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Back",actionName: "Index" ,controllerName:"Patients")
</p>
