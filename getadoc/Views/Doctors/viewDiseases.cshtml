@model IEnumerable<getadoc.Models.diseaseData>

@{
    ViewBag.Title = "Diseases";
}

<h2>All the Diseases recorded</h2>

<p>
    @Html.ActionLink("Create New", "addDiseases")
</p>
<p>
    @Html.ActionLink("Back to Doctor View","Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.symptom1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.symptom2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.symptom3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.symptom4)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.symptom1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.symptom2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.symptom3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.symptom4)
        </td>
        <td>
            @Html.ActionLink("Edit", actionName: "editDisease", routeValues: new { id=item.id }) |
            @Html.ActionLink("Delete",actionName: "deleteDisease",routeValues: new { id=item.id })
        </td>
    </tr>
}

</table>
